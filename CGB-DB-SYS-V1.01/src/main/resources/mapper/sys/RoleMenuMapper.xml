<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.cy.pj.sys.dao.RoleMenuDao">
    <!-- findObjectByMenuId -->
    <select id="findObjectByMenuId">
        select id,role_id,menu_id from sys_role_menus where menu_id=#{menuId}
    </select>




    <!-- deleteObjectByMenuId -->
    <delete id="deleteObjectByMenuId" parameterType="int">

        delete from sys_role_menus
        <choose>
            <when test= "menuId!=null and menuId > 0">
                where menu_id = #{menuId}
            </when>
            <otherwise>
                where 1=2
            </otherwise>
        </choose>

    </delete>

</mapper>